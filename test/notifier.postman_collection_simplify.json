[
  {
    "name": "notification timeline search unread count=count--",
    "method": "POST",
    "url": "http://{{notifier_api_host}}:{{notifier_api_port}}/api/notifications/search",
    "body": {
      "token": "{{token}}",
      "read": false,
      "filter": {},
      "page": 1,
      "per_page": 2
    }
  },
  {
    "name": "notification search by article_id",
    "method": "POST",
    "url": "http://{{notifier_api_host}}:{{notifier_api_port}}/api/notifications/search",
    "body": {
      "token": "{{token}}",
      "filter": {
        "$or": [
          {
            "new.uuid": "{{article_2_id}}"
          },
          {
            "old.uuid": "{{article_2_id}}"
          }
        ]
      },
      "page": 1,
      "per_page": 3
    }
  },
  {
    "name": "notification  search by source and type",
    "method": "POST",
    "url": "http://{{notifier_api_host}}:{{notifier_api_port}}/api/notifications/search",
    "body": {
      "token": "{{token}}",
      "filter": {
        "type": "Router",
        "source": "cmdb"
      },
      "page": 1,
      "per_page": 10
    }
  },
  {
    "name": "notification batch update status to read",
    "method": "PUT",
    "url": "http://{{notifier_api_host}}:{{notifier_api_port}}/api/notifications/",
    "body": {
      "token": "{{token}}",
      "read": true
    }
  },
  {
    "name": "notification update status to read",
    "method": "PUT",
    "url": "http://{{notifier_api_host}}:{{notifier_api_port}}/api/notifications/{{article_timeline_uuid}}",
    "body": {
      "token": "{{token}}",
      "read": true
    }
  },
  {
    "name": "login",
    "method": "POST",
    "url": "http://{{auth_api_host}}:{{auth_api_port}}/auth/login",
    "body": {
      "username": "{{auth_user}}",
      "password": "{{auth_passwd}}"
    }
  },
  {
    "name": "notification  search unread",
    "method": "POST",
    "url": "http://{{notifier_api_host}}:{{notifier_api_port}}/api/notifications/search",
    "body": {
      "token": "{{token}}",
      "read": false,
      "filter": {},
      "page": 1,
      "per_page": 10
    }
  }
]
